<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensors_prog_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:padding="@dimen/margin_medium"
    tools:showIn="@layout/activity_guard_tracker">

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensors_subtitle"
        android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/sensors_subtitle_view"
        android:paddingBottom="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/sensors_synced_state_view"
        android:layout_toEndOf="@id/sensors_subtitle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_synced"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#FF0000"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_medium"/>

    <include layout="@layout/fragment_wake_sensors_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensors_subtitle_view"
        />

    <Spinner
        android:id="@+id/sensors_config_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="textEnd"
        />

    <Spinner
        android:id="@+id/sensors_sync_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensors_config_spinner"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        />

</RelativeLayout>

