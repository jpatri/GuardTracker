<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="2dp"
    android:padding="@dimen/margin_medium"
    tools:showIn="@layout/activity_guard_tracker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--android:paddingBottom="@dimen/margin_medium"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_mon_info_subtitle"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/textView"
            android:paddingBottom="@dimen/margin_medium"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button android:id="@+id/last_mon_info_google_maps_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_button_activity_guard_tracker"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/sms_recv_date_label_for"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&lt;dd/mm/yyyy      hh:mm>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_datetime"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/gps_label_for"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;hh:mm:ss>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;lat>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_lat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;long>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_lng"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;alt>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_alt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;nÂº sat>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_sat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;hdop>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_hdop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;fixed>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_fixed"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/others_label_for"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;temp.>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_temp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;sim>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_sim"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="&lt;bat.>"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/last_mon_info_bat"
            />
    </LinearLayout>

</LinearLayout>
